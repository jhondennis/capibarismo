---
export interface FactProps {
  icon: 'water' | 'users' | 'leaf' | 'heart'
  title: string
  description: string
}

export interface AboutProps {
  title: string
  subtitle: string
  whatTitle: string
  whatDescription1: string
  whatDescription2: string

  whatScientific: string
  whatScientificValue: string
  image: string
  imageAlt: string

  aboutMore: string

  facts: FactProps[]
}

const {
  title,
  subtitle,
  whatTitle,
  whatDescription1,
  whatDescription2,
  whatScientific,
  whatScientificValue,
  image,
  imageAlt,
  aboutMore,
  facts,
} = Astro.props as AboutProps
---

<section id="about" class="bg-warm-100 dark:bg-warm-800/50 py-20">
  <div class="container mx-auto px-4">
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <h2 class="mb-4 text-3xl font-bold md:text-4xl">{title}</h2>
      <p class="text-warm-700 dark:text-warm-300">{subtitle}</p>
    </div>

    <div class="mb-16 grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
      <div class="order-2 lg:order-1">
        <h3 class="mb-4 text-2xl font-bold">{whatTitle}</h3>
        <p class="text-warm-700 dark:text-warm-300 mb-6">
          {whatDescription1}
        </p>
        <p class="text-warm-700 dark:text-warm-300 mb-6">
          {whatDescription2}
        </p>

        <div class="text-warm-600 dark:text-warm-400 flex items-center gap-3">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-5 w-5"
          >
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
          <span class="text-sm font-medium">{whatScientific}: <em>{whatScientificValue}</em></span>
        </div>
      </div>

      <div class="relative order-1 lg:order-2">
        <div
          class="transform overflow-hidden rounded-2xl shadow-lg transition-transform duration-300 hover:rotate-2"
        >
          <img src={image} alt={imageAlt} class="h-auto w-full object-cover" />
        </div>

        <div
          class="bg-warm-200 dark:bg-warm-700 absolute -right-0 -bottom-12 -z-10 h-32 w-32 rounded-full"
        >
        </div>
        <div
          class="border-warm-300 dark:border-warm-600 absolute -top-4 -left-4 -z-10 h-20 w-20 rounded-full border-4"
        >
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
      {
        facts?.map((fact: FactProps) => (
          <div class="dark:bg-warm-900 group rounded-xl bg-white p-6 shadow-md transition-shadow duration-300 hover:shadow-lg">
            <div class="bg-warm-200 dark:bg-warm-800 group-hover:bg-warm-300 dark:group-hover:bg-warm-700 mb-4 flex h-12 w-12 items-center justify-center rounded-full transition-colors">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-warm-600 dark:text-warm-400 h-6 w-6"
              >
                {fact.icon === 'water' && (
                  <path d="M12 2v6m0 0c-3.5 0-6 3-6 6s2.5 6 6 6 6-3 6-6-2.5-6-6-6z" />
                )}
                {fact.icon === 'users' && (
                  <>
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                  </>
                )}
                {fact.icon === 'leaf' && (
                  <path d="M11 20A7 7 0 0 1 4 13a8 8 0 0 0 14-5.5c0-1.26-.15-2.43-.4-3.5H18a9.86 9.86 0 0 0-1.9 3.79c-.14.55-.9 1.3-1.71 1.3-.91 0-1.39-.75-1.39-1.3A9.86 9.86 0 0 0 11.1 4H9.5a17.82 17.82 0 0 0-.4 3.5A8 8 0 0 0 15 13a7 7 0 0 1-4 7z" />
                )}
                {fact.icon === 'heart' && (
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                )}
              </svg>
            </div>
            <h4 class="mb-2 text-xl font-bold">{fact.title}</h4>
            <p class="text-warm-700 dark:text-warm-300">{fact.description}</p>
          </div>
        ))
      }
    </div>

    <div class="mt-16 text-center">
      <a
        href="#news"
        class="text-warm-600 dark:text-warm-400 hover:text-warm-800 dark:hover:text-warm-200 inline-flex items-center gap-2 font-medium transition-colors"
      >
        {aboutMore}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-4 w-4"
        >
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <polyline points="19 12 12 19 5 12"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

---
import BuyMeACoffee from '@/components/BuyMeACoffee.astro'
import SectionLink, { type SectionLinkProps } from '@/components/SectionLink.astro'
import SocialMedia from '@/components/SocialMedia.astro'

export interface FooterProps {
  title: string
  description: string
  links: string
  connect: string

  sections: SectionLinkProps[]

  twitter: string
  instagram: string
  tiktok: string
  hrefBuymeacoffee: string

  rights: string
  poweredby: string
  hrefPowerdBy: string
  developer: string
}
const currentYear = new Date().getFullYear()

const {
  title,
  description,
  links,
  connect,

  sections,

  twitter,
  instagram,
  tiktok,
  hrefBuymeacoffee,
  rights,
  poweredby,
  hrefPowerdBy,
  developer,
} = Astro.props as FooterProps
---

<footer class="bg-warm-100 dark:bg-warm-800 border-warm-200 dark:border-warm-700 mt-20 border-t">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <div>
        <div class="mb-4 flex items-center gap-2">
          <div
            class="bg-warm-200 dark:bg-warm-700 flex h-10 w-10 items-center justify-center overflow-hidden rounded-full"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-6 w-6"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <circle cx="8" cy="9" r="1"></circle>
              <circle cx="16" cy="9" r="1"></circle>
              <path d="M9 16c.85.63 1.9 1 3 1s2.15-.37 3-1"></path>
            </svg>
          </div>
          <span class="text-xl font-bold tracking-tight">{title}</span>
        </div>
        <p class="text-warm-700 dark:text-warm-300 max-w-xs">
          {description}
        </p>
      </div>

      <div>
        <h3 class="mb-4 text-lg font-bold">{links}</h3>
        <ul class="space-y-2">
          {
            sections.map((section) => (
              <li>
                <SectionLink href={section.href} text={section.text} />
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3 class="mb-4 text-lg font-bold">{connect}</h3>
        <!-- <SocialMedia twitter={twitter} instagram={instagram} tiktok={tiktok} /> -->
        <BuyMeACoffee buymeacoffee="Buy me a coffee" href={hrefBuymeacoffee} />
      </div>
    </div>

    <div
      class="border-warm-200 dark:border-warm-700 mt-8 flex flex-col items-center justify-between gap-4 border-t pt-8 md:flex-row"
    >
      <p class="text-warm-700 dark:text-warm-300 text-sm">
        &copy; {currentYear}{' '}{rights}
      </p>
      <p class="text-warm-700 dark:text-warm-300 flex items-center gap-1 text-sm">
        {poweredby}
        <a
          href={hrefPowerdBy}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-warm-900 dark:hover:text-warm-100 font-medium transition-colors"
        >
          {developer}
        </a>
      </p>
    </div>
  </div>
</footer>

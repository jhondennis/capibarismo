---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Button from "./Button.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative overflow-hidden pt-20 pb-32">
  <!-- Background pattern -->
  <div class="absolute inset-0 z-0 opacity-20 dark:opacity-10">
    <div
      class="absolute top-0 left-0 w-full h-full bg-repeat"
      style="background-image: url('/patterns/capybara-pattern.svg'); background-size: 100px;"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-6 max-w-xl">
        <div
          class="inline-block px-4 py-2 bg-warm-200 dark:bg-warm-800 rounded-full text-sm font-medium animate-bounce"
        >
          {t("hero.welcome")} âœ¨
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
          {t("hero.title.first")}
          <span class="text-warm-600 dark:text-warm-400"
            >{t("hero.title.highlight")}</span
          >
          {t("hero.title.second")}
        </h1>

        <p class="text-lg text-warm-700 dark:text-warm-300">
          {t("hero.description")}
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <Button text={t("hero.button.primary")} href="#about" type="primary">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-4 h-4"
            >
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </Button>
          <Button
            text={t("hero.button.secondary")}
            href="#news"
            type="secondary"
          />
        </div>

        <div class="flex items-center gap-2 text-warm-700 dark:text-warm-300">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="w-4 h-4"
          >
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
          <span class="text-sm"
            >{t("hero.updated")}: <time datetime="2024-03-26">26/03/2024</time
            ></span
          >
        </div>
      </div>

      <div class="relative">
        <div
          class="relative z-10 rounded-2xl overflow-hidden shadow-xl transform hover:scale-[1.02] transition-transform duration-300"
        >
          <img
            src="/images/hero-capybara.jpg"
            alt="Cute capybara relaxing"
            class="w-full h-auto object-cover"
          />
        </div>

        <!-- Floating elements -->
        <div
          class="absolute -top-6 -right-6 w-24 h-24 bg-warm-300 dark:bg-warm-700 rounded-full opacity-70 animate-float"
        >
        </div>
        <div
          class="absolute -bottom-8 -left-8 w-16 h-16 bg-warm-400 dark:bg-warm-600 rounded-full opacity-70 animate-float animation-delay-1000"
        >
        </div>
        <div
          class="absolute top-1/2 -right-4 transform -translate-y-1/2 bg-white dark:bg-warm-800 rounded-xl p-3 shadow-lg animate-float animation-delay-2000"
        >
          <div class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-5 h-5 text-red-500"
            >
              <path
                d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"
              ></path>
            </svg>
            <span class="font-medium">{t("hero.card.love")}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div
      class="absolute -bottom-12 left-1/2 transform -translate-x-1/2 flex flex-col items-center gap-2 animate-pulse"
    >
      <a href="#about">
        <span class="text-sm font-medium">{t("hero.scroll")}</span>
      </a>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="w-6 h-6 animate-bounce"
      >
        <polyline points="6 9 12 15 18 9"></polyline>
      </svg>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .animate-float {
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animation-delay-1000 {
    animation-delay: 1s;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>

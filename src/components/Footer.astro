---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();
---

<footer
  class="bg-warm-100 dark:bg-warm-800 border-t border-warm-200 dark:border-warm-700 mt-20"
>
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <div class="flex items-center gap-2 mb-4">
          <div
            class="w-10 h-10 rounded-full bg-warm-200 dark:bg-warm-700 flex items-center justify-center overflow-hidden"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-6 h-6"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <circle cx="8" cy="9" r="1"></circle>
              <circle cx="16" cy="9" r="1"></circle>
              <path d="M9 16c.85.63 1.9 1 3 1s2.15-.37 3-1"></path>
            </svg>
          </div>
          <span class="font-bold text-xl tracking-tight">Capivarismo</span>
        </div>
        <p class="text-warm-700 dark:text-warm-300 max-w-xs">
          {t("footer.description")}
        </p>
      </div>

      <div>
        <h3 class="font-bold text-lg mb-4">{t("footer.links")}</h3>
        <ul class="space-y-2">
          <li>
            <a
              href="#about"
              class="text-warm-700 dark:text-warm-300 hover:text-warm-900 dark:hover:text-warm-100 transition-colors"
              >{t("nav.about")}</a>
          </li>
          <li>
            <a
              href="#news"
              class="text-warm-700 dark:text-warm-300 hover:text-warm-900 dark:hover:text-warm-100 transition-colors"
              >{t("nav.news")}</a>
          </li>
          <li>
            <a
              href="#videos"
              class="text-warm-700 dark:text-warm-300 hover:text-warm-900 dark:hover:text-warm-100 transition-colors"
              >{t("nav.videos")}</a>
          </li>
          <li>
            <a
              href="https://github.com/dennislaurel/capivarismo"
              target="_blank"
              rel="noopener noreferrer"
              class="text-warm-700 dark:text-warm-300 hover:text-warm-900 dark:hover:text-warm-100 transition-colors"
              >{t("footer.repository")}</a>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="font-bold text-lg mb-4">{t("footer.connect")}</h3>
        <div class="flex gap-4 mb-6">
          <a
            href="https://twitter.com/dennislaurel"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-warm-200 dark:bg-warm-700 flex items-center justify-center hover:bg-warm-300 dark:hover:bg-warm-600 transition-colors"
            aria-label="Twitter"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-5 h-5"
            >
              <path
                d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
              ></path>
            </svg>
          </a>
          <a
            href="https://instagram.com/dennislaurel"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-warm-200 dark:bg-warm-700 flex items-center justify-center hover:bg-warm-300 dark:hover:bg-warm-600 transition-colors"
            aria-label="Instagram"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-5 h-5"
            >
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a
            href="https://tiktok.com/@dennislaurel"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-warm-200 dark:bg-warm-700 flex items-center justify-center hover:bg-warm-300 dark:hover:bg-warm-600 transition-colors"
            aria-label="TikTok"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-5 h-5"
            >
              <path d="M9 12a4 4 0 1 0 0 8 4 4 0 0 0 0-8z"></path>
              <path d="M15 8a4 4 0 1 0 0-8 4 4 0 0 0 0 8z"></path>
              <path d="M15 8v8a4 4 0 0 1-4 4H9"></path>
              <line x1="15" y1="4" x2="21" y2="4"></line>
            </svg>
          </a>
        </div>
        <a
          href="https://buymeacoffee.com/dennislaurel"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-4 py-2 bg-[#FFDD00] text-[#000000] rounded-full font-medium hover:bg-[#FFDD00]/90 transition-colors w-fit"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="w-4 h-4"
          >
            <path d="M18 8h1a4 4 0 0 1 0 8h-1"></path>
            <path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path>
            <line x1="6" y1="1" x2="6" y2="4"></line>
            <line x1="10" y1="1" x2="10" y2="4"></line>
            <line x1="14" y1="1" x2="14" y2="4"></line>
          </svg>
          <span>Buy me a coffee</span>
        </a>
      </div>
    </div>

    <div
      class="border-t border-warm-200 dark:border-warm-700 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-warm-700 dark:text-warm-300 text-sm">
        &copy; {currentYear} Capivarismo. {t("footer.rights")}
      </p>
      <p
        class="text-warm-700 dark:text-warm-300 text-sm flex items-center gap-1"
      >
        Powered by <a
          href="https://twitter.com/dennislaurel"
          target="_blank"
          rel="noopener noreferrer"
          class="font-medium hover:text-warm-900 dark:hover:text-warm-100 transition-colors"
          >Dennis Laurel</a
        >
      </p>
    </div>
  </div>
</footer>

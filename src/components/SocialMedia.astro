---
export interface SocialMediaProps {
  twitter: string
  instagram: string
  tiktok: string
}

const { twitter, instagram, tiktok } = Astro.props as SocialMediaProps
---

<div class="mb-6 flex gap-4">
  <a
    href={twitter}
    target="_blank"
    rel="noopener noreferrer"
    class="bg-warm-200 dark:bg-warm-700 hover:bg-warm-300 dark:hover:bg-warm-600 flex h-10 w-10 items-center justify-center rounded-full transition-colors"
    aria-label="Twitter"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="h-5 w-5"
    >
      <path
        d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
      ></path>
    </svg>
  </a>
  <a
    href={instagram}
    target="_blank"
    rel="noopener noreferrer"
    class="bg-warm-200 dark:bg-warm-700 hover:bg-warm-300 dark:hover:bg-warm-600 flex h-10 w-10 items-center justify-center rounded-full transition-colors"
    aria-label="Instagram"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="h-5 w-5"
    >
      <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
      <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
    </svg>
  </a>
  <a
    href={tiktok}
    target="_blank"
    rel="noopener noreferrer"
    class="bg-warm-200 dark:bg-warm-700 hover:bg-warm-300 dark:hover:bg-warm-600 flex h-10 w-10 items-center justify-center rounded-full transition-colors"
    aria-label="TikTok"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="h-5 w-5"
    >
      <path d="M9 12a4 4 0 1 0 0 8 4 4 0 0 0 0-8z"></path>
      <path d="M15 8a4 4 0 1 0 0-8 4 4 0 0 0 0 8z"></path>
      <path d="M15 8v8a4 4 0 0 1-4 4H9"></path>
      <line x1="15" y1="4" x2="21" y2="4"></line>
    </svg>
  </a>
</div>

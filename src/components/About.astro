---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const facts = [
  {
    icon: "water",
    title: t("about.facts.semiaquatic.title"),
    description: t("about.facts.semiaquatic.description")
  },
  {
    icon: "users",
    title: t("about.facts.social.title"),
    description: t("about.facts.social.description")
  },
  {
    icon: "leaf",
    title: t("about.facts.herbivore.title"),
    description: t("about.facts.herbivore.description")
  },
  {
    icon: "heart",
    title: t("about.facts.friendly.title"),
    description: t("about.facts.friendly.description")
  }
];
---

<section id="about" class="py-20 bg-warm-100 dark:bg-warm-800/50">
  <div class="container mx-auto px-4">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{t("about.title")}</h2>
      <p class="text-warm-700 dark:text-warm-300">{t("about.subtitle")}</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16">
      <div class="order-2 lg:order-1">
        <h3 class="text-2xl font-bold mb-4">{t("about.what.title")}</h3>
        <p class="text-warm-700 dark:text-warm-300 mb-6">
          {t("about.what.description1")}
        </p>
        <p class="text-warm-700 dark:text-warm-300 mb-6">
          {t("about.what.description2")}
        </p>

        <div class="flex items-center gap-3 text-warm-600 dark:text-warm-400">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="w-5 h-5"
          >
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
          <span class="text-sm font-medium"
            >{t("about.what.scientific")}: <em>Hydrochoerus hydrochaeris</em
            ></span
          >
        </div>
      </div>

      <div class="order-1 lg:order-2 relative">
        <div
          class="rounded-2xl overflow-hidden shadow-lg transform hover:rotate-2 transition-transform duration-300"
        >
          <img
            src="https://t3.ftcdn.net/jpg/08/04/34/56/360_F_804345665_mhKUnvPANkxG6tQ4ihXTQvu6wt3Dx3vy.jpg"
            alt="Capybara in its natural habitat"
            class="w-full h-auto object-cover"
          />
        </div>

        <!-- Decorative elements -->
        <div
          class="absolute -bottom-6 -right-6 w-32 h-32 bg-warm-200 dark:bg-warm-700 rounded-full -z-10"
        >
        </div>
        <div
          class="absolute -top-4 -left-4 w-20 h-20 border-4 border-warm-300 dark:border-warm-600 rounded-full -z-10"
        >
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        facts.map(fact => (
          <div class="bg-white dark:bg-warm-900 rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow duration-300 group">
            <div class="w-12 h-12 rounded-full bg-warm-200 dark:bg-warm-800 flex items-center justify-center mb-4 group-hover:bg-warm-300 dark:group-hover:bg-warm-700 transition-colors">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-6 h-6 text-warm-600 dark:text-warm-400"
              >
                {fact.icon === "water" && (
                  <path d="M12 2v6m0 0c-3.5 0-6 3-6 6s2.5 6 6 6 6-3 6-6-2.5-6-6-6z" />
                )}
                {fact.icon === "users" && (
                  <>
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                  </>
                )}
                {fact.icon === "leaf" && (
                  <path d="M11 20A7 7 0 0 1 4 13a8 8 0 0 0 14-5.5c0-1.26-.15-2.43-.4-3.5H18a9.86 9.86 0 0 0-1.9 3.79c-.14.55-.9 1.3-1.71 1.3-.91 0-1.39-.75-1.39-1.3A9.86 9.86 0 0 0 11.1 4H9.5a17.82 17.82 0 0 0-.4 3.5A8 8 0 0 0 15 13a7 7 0 0 1-4 7z" />
                )}
                {fact.icon === "heart" && (
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                )}
              </svg>
            </div>
            <h4 class="text-xl font-bold mb-2">{fact.title}</h4>
            <p class="text-warm-700 dark:text-warm-300">{fact.description}</p>
          </div>
        ))
      }
    </div>

    <div class="mt-16 text-center">
      <a
        href="#news"
        class="inline-flex items-center gap-2 text-warm-600 dark:text-warm-400 font-medium hover:text-warm-800 dark:hover:text-warm-200 transition-colors"
      >
        {t("about.more")}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="w-4 h-4"
        >
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <polyline points="19 12 12 19 5 12"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>
